
<div class="col-md-12">
    <h2> {{{ bodyTitle }}} </h2>
    <p> {{{bodyText}}} </p> <br>

    <ul class="list-group">
        <li class="list-group-item">
            <b> Event title: </b> {{data.title}} <br>
            <b> Event ID: </b> {{data._id}} <br>
            <b> Attending users: </b> <br>
            <ul>
                {{#each data.attendingUsers}}
                    <li> <b> userID: </b> {{this.userID}} </li>
                {{else}}
                    <li> No users attending this event </li>
                {{/each}}
            </ul> <br>

            <p><a class="btn btn-secondary" href="/event/{{this._id}}" role="button">Attend event &raquo;</a></p>
        </li>
    </ul>

    <br>

    <ul class="list-group">
        <li class="list-group-item">
            <b> Comments: </b> <br> <br>
            {{#each data.comments}}
                <b> userID: </b> {{this.userID}} <br>
            {{else}}
                No comments yet <br> <br>
            {{/each}}
        </li>
    </ul>

    <br>

    <ul class="list-group">
        <li class="list-group-item">
            <b> Add comment </b> <br> <br>
            <form method="POST" action="/sdsdsSDSDS">
                <div class="form-group">
                  <label for="message">Message</label>
                  <textarea name="message" class="form-control" type:'text' rows="2" placeholder="Message"></textarea>
                </div>
                <div class="form-group">
                  <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </form>
        </li>
    </ul>



</div>
